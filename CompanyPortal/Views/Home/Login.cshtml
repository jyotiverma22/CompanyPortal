@model CompanyPortal.ViewModels.LoginViewModel


<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">FriendsInfo</h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="col-md-offset-5 bgR">Login yourself</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger  col-md-offset-5" })
            <div class="form-group setmargin">
                <label class="control-label col-md-2 col-md-offset-3" for="Username">Username/Email</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Username/Email" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group setmargin">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-3" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group setmargin">
                <div class="col-md-offset-5 col-md-5">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/site")

    <script type="text/javascript">

        window.onload = window.history.forward(0);
    </script>
}

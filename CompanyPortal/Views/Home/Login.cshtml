@model CompanyPortal.ViewModels.LoginViewModel


<div>
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Login</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

    </div>
   
    @using (Html.BeginForm("Login", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger  col-md-offset-5" })
            <div class="form-group setmargin">
                <label class="control-label col-md-5 col-md-offset-3" for="Username"><b>User Name/Email</b></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Username/Email", @id = "username2" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group setmargin">
                <label class="control-label col-md-2 col-md-offset-3" for="Password"><b>Password</b></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password",@id="password2" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group setmargin">
                <div class="col-md-offset-5 col-md-5 loginbtn">
                    <input type="submit" value="Login" class="btn btn-default btnlogin" />
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {


    <script type="text/javascript">

        window.onload = window.history.forward(0);
        $.validator.unobtrusive.parse(document);
        $(document).ready(function () {
           


            });

        });

    </script>
}
